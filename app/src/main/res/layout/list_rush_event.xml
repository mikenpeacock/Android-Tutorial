<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    app:cardCornerRadius="2dp"
    app:contentPadding="10dp"
    app:cardElevation="5dp"
    >
    <RelativeLayout
        android:padding="3dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/list_rush_event_name_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/list_rush_event_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="test"
                android:layout_weight="0.75"/>

            <TextView
                android:id="@+id/list_rush_event_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textStyle="bold"
                android:text="test"
                android:layout_weight="0.25"/>

        </LinearLayout>
        <View
            android:id="@+id/list_rush_event_line"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/list_rush_event_name_layout"
            android:background="#000"/>

        <TextView
            android:id="@+id/list_rush_event_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="test"
            android:layout_below="@+id/list_rush_event_line"/>

        <TextView
            android:id="@+id/list_rush_event_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/list_rush_event_location"
            android:text="test"
            android:textSize="14sp"
            android:textStyle="bold"/>

    </RelativeLayout>





</android.support.v7.widget.CardView>